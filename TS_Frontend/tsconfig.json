{
  "compilerOptions": {
    "target": "es6",
    "lib": [ "dom", "ES2020" ],
    "jsx": "react",
    "module": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "isolatedModules": true,
    "noEmit": false,
    "resolveJsonModule": true,
    "baseUrl": "./src",
    "paths": {
      "*": [ "*", "src/*" ]
    }
  },
  "include": [ "src/**/*.ts", "src/**/*.tsx" ],
  "exclude": [ "node_modules" ]
}
